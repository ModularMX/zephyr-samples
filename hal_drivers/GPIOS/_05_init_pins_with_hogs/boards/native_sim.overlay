/ {
    aliases {
        gpio = &gpio0;
    };
};

&gpio0 {
    /* Declare an internal node name "pin" and set pin 0 as output with init 
    state as high level, you can read gpio-controller.yaml file to check the 
    rest of the properties */
    pin {
        gpio-hog;
        gpios = <0 GPIO_ACTIVE_HIGH>;
        output-high;
        line-name = "output pin"; 
    };
};