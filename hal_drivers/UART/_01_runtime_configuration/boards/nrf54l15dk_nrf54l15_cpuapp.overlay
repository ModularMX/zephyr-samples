/ {
    aliases {
        uart = &uart30;
    };  
};

/*configure the uart 30, 115200 bauds, 8N1*/
&uart30 {
    status = "okay";
    pinctrl-0 = <&uart_pins>;
	pinctrl-names = "default", "sleep";
};

/*configure uart pins as Tx and Rx pins*/
&pinctrl {
	uart_pins: uart_pins {
		group1 {
			psels = <NRF_PSEL(UART_TX, 0, 0)>;
		};

        group2 {
			psels = <NRF_PSEL(UART_RX, 0, 1)>;
			bias-pull-up;
		};
    };
};